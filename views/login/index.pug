extends ../layouts/common

block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger= error
      
  form.d-flex.flex-column.w-5(action="/login", method="POST")
    .form-group
      label Email
      input.form-control(type="text",name='email')
    .form-group
      label Password 
      input.form-control(type="text",name='password')
    button.btn.btn-primary.button Login
  a(href="./login/register") Register
    
    