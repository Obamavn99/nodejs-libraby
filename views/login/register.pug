extends ../layouts/common

block content
  h1 Register
  
  if errors
    each error in errors
      .alert.alert-danger= error
      
  form.d-flex.flex-column.w-5(action="/login/add", method="POST")
    .form-group
      label Name 
      input.form-control(type="text",name='name')
    .form-group
      label Age 
      input.form-control(type="text",name='age')
    .form-group
      label Email
      input.form-control(type="text",name='email')
    .form-group
      label Password 
      input.form-control(type="text",name='password')
      input.form-control(type="hidden",name='isAdmin', value="false")
      input.form-control(type="hidden",name='avatar', value="")
    button.btn.btn-primary.button Register
    
    